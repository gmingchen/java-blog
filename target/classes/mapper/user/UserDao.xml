<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.slipper.modules.user.dao.UserDao">

    <resultMap type="com.slipper.modules.user.entity.UserEntity" id="userMap">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="salt" column="salt"/>
        <result property="nickname" column="nickname"/>
        <result property="sex" column="sex"/>
        <result property="avatar" column="avatar"/>
        <result property="mobile" column="mobile"/>
        <result property="author" column="author"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

<!--    IPage<UserBasicDto> queryPage(Page<UserBasicDto> page, @Param("start") String start, @Param("end") String end, @Param("name") String name);-->
    <select id="queryPage" resultType="com.slipper.modules.user.model.dto.UserBasicDto">
        SELECT id, username, nickname, sex, avatar, mobile, author, status, created_at
        FROM user
        <where>
            <if test="name != null or name !=''">
                AND (username LIKE "%${name}%" OR nickname LIKE "%${name}%")
            </if>
            <if test="start != null and start != ''">
                AND date_format(created_at,'%Y-%m-%d') <![CDATA[ >= ]]> date_format(#{start},'%Y-%m-%d')
            </if>
            <if test="end != null and end != ''">
                AND date_format(created_at,'%Y-%m-%d') <![CDATA[ <= ]]> date_format(#{end},'%Y-%m-%d')
            </if>
        </where>
        ORDER BY author DESC, created_at DESC
    </select>

<!--    UserBasicDto queryInfo(@Param("id") Integer id);-->
    <select id="queryInfo" resultType="com.slipper.modules.user.model.dto.UserBasicDto">
        SELECT id, username, nickname, sex, avatar, mobile, author, status, created_at
        FROM user
        WHERE id = #{id}
    </select>

</mapper>